<UserControl x:Class="PacManGame.Controls.Tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PacManGame"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1000">
    <Grid Width="25" Height="25">
        <Ellipse x:Name="Dot" Fill="Green" Height="5" Width="5"/>
        <Image x:Name="Wall" Source="/PacManGame;component/Images/Wall.png" Height="25" Width="25" Visibility="Hidden"/>
        <Image x:Name="Exit" Source="/PacManGame;component/Images/Exit.png" Height="25" Width="25" Visibility="Hidden"/>

    </Grid>
</UserControl>
